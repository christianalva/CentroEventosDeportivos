@page "/eventos/baja"
@rendermode InteractiveServer
@inject EventoDeportivoBajaUseCase bajaEvento
@inject IServicioSesion servicioSesion

<DialogoConfirmacion @ref="dialogo" OnConfirmado="Eliminar"/>

@if (_mensajeError.Any())
{
    <ul class="alerta-error">
        @foreach (var error in _mensajeError)
        {
            <li>@error</li>
        }
    </ul>
}

@if (!string.IsNullOrEmpty(_mensajeExito))
{
  <div class="alert alerta-exito">@_mensajeExito</div>
}


@if(poseePermiso){
    <div class="contenedor-buscar">
        <h2 class="buscar-titulo">Baja Evento Deportivo</h2>
        <div class="buscar-form">
            <label class="buscar-label">Ingrese el ID del  Evento Deportivo a Eliminar</label>
            <input type="number" class="buscar-input" @bind="IdBusqueda" />
        </div>
        <button class="buscar-boton" @onclick="BuscarEvento">Buscar Evento</button>
    </div>
}


@code {
    private int? IdBusqueda;
    private EventoDeportivo? eventoParaBaja;
    private bool poseePermiso;
    private List<string> _mensajeError = new();
    private string _mensajeExito = string.Empty;
    private DialogoConfirmacion dialogo = null!;

    protected override void OnInitialized()
    {
        if(servicioSesion.UsuarioActual == null){
            _mensajeError.Add("Debe Iniciar sesion.");
            return;
        }
        if(servicioSesion.UsuarioActual != null)
            poseePermiso = servicioSesion.UsuarioActual.Permisos.Contains(CentroEventos.Aplicacion.Enums.Permiso.UsuarioBaja);

        if (!poseePermiso)
            _mensajeError.Add("No posee permiso para eliminar Eventos Deportivos.");
    }

    private void BuscarEvento()
    {
        _mensajeError = new();
        _mensajeExito = "";
        eventoParaBaja = null;

        if (!IdBusqueda.HasValue)
        {
            _mensajeError.Add("Debe ingresar un ID numérico válido.");
            return;
        }

        try
        {
            eventoParaBaja = bajaEvento.ObtenerParaBaja(IdBusqueda.Value);
            dialogo.SetMensaje($"¿Desea eliminar al Evento Deportivo {eventoParaBaja.Nombre}?");
            dialogo.Mostrar();
        }
        catch (CentroEventos.Aplicacion.Excepciones.EntidadNotFoundException ex)
        {
            _mensajeError.Add(ex.Message);
        }
        catch (CentroEventos.Aplicacion.Excepciones.FalloAutorizacionException ex)
        {
            _mensajeError.Add(ex.Message);
        }
    }

    private void Eliminar()
    {
        _mensajeError.Clear();
        _mensajeExito = "";
        if (!IdBusqueda.HasValue)
        {
          _mensajeError.Add("ID invalido.");
          return;
        }
        try
        {
            // Ejecuta la baja
            bajaEvento.Ejecutar(IdBusqueda.Value);
            _mensajeExito = $"Evento Deportivo con ID {IdBusqueda} eliminado correctamente.";
        }
        catch (CentroEventos.Aplicacion.Excepciones.OperacionInvalidaException ex)
        {
             _mensajeError.Add(ex.Message);
        }
        catch (CentroEventos.Aplicacion.Excepciones.EntidadNotFoundException ex)
        {
             _mensajeError.Add(ex.Message);
        }
        catch (CentroEventos.Aplicacion.Excepciones.FalloAutorizacionException ex)
        {
             _mensajeError.Add(ex.Message);
        }
    }
}
